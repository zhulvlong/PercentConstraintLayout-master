<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.github.layout.SubTextView
            android:id="@+id/percent"
            style="@style/itemMain"
            android:text="PercentConstraintLayout" />

        <com.github.layout.SubTextView
            android:id="@+id/tv"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="SubTextView" />

        <com.github.layout.SubTextView
            android:id="@+id/iv"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="SubImageView" />

        <com.github.layout.SubTextView
            android:id="@+id/et"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="SubEditText" />

        <com.github.layout.SubTextView
            android:id="@+id/view_group"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="SubLinearLayout and SubRelativeLayout" />

        <com.github.layout.SubTextView
            android:id="@+id/checked"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="SubRadioButton and SubCheckBox"
            app:sub_background_normal="@color/colorPrimary"
            app:sub_background_pressed="@color/colorPrimaryDark"
            app:sub_corner_radius="6dp" />

        <com.github.layout.SubTextView
            android:id="@+id/view"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="SubView" />

        <com.github.layout.SubTextView
            android:id="@+id/gradient"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="Gradient" />



        <com.github.layout.SubTextView
            android:id="@+id/ripper"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="Ripper" />

        <com.github.layout.SubTextView
            android:id="@+id/shadow"
            style="@style/itemMain"
            android:layout_marginTop="12dp"
            android:text="Shadow" />
    </LinearLayout>

</ScrollView>
