<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--为了方便扩展其他layout，定义在外层，命名以layout_开头，否则lint会报红警告-->
    <attr name="layout_radiusCP" format="dimension" /><!--圆角大小-->
    <attr name="layout_shadowColorCP" format="color" /><!--阴影颜色-->
    <attr name="layout_shadowEvaluationCP" format="dimension" /><!--阴影大小-->
    <attr name="layout_shadowDxCP" format="dimension" /><!--阴影偏移X-->
    <attr name="layout_shadowDyCP" format="dimension" /><!--阴影偏移Y-->

    <!--下面的这些百分比属性必须设置左右约束/上下约束才会生效-->
    <attr name="layout_widthCP" format="string" />
    <attr name="layout_heightCP" format="string" />
    <attr name="layout_marginLeftCP" format="string" /><!--控件先对容器(ConstraintLayout)左边距和容器宽度的百分比-->
    <attr name="layout_marginRightCP" format="string" /><!--控件先对容器(ConstraintLayout)右边距和容器宽度的百分比-->
    <attr name="layout_marginStartCP" format="string" /><!--控件先对容器(ConstraintLayout)左边距和容器宽度的百分比-->
    <attr name="layout_marginEndCP" format="string" /><!--控件先对容器(ConstraintLayout)右边距和容器宽度的百分比-->
    <attr name="layout_marginTopCP" format="string" /><!--控件先对容器(ConstraintLayout)上边距和容器高度的百分比-->
    <attr name="layout_marginBottomCP" format="string" /><!--控件先对容器(ConstraintLayout)下边距和容器高度的百分比-->


    <!--用统一一个EasyLayout，用于封装读取自定义属性-->
    <declare-styleable name="PercentLayout">
        <attr name="layout_radiusCP" />
        <attr name="layout_shadowColorCP" />
        <attr name="layout_shadowEvaluationCP" />
        <attr name="layout_shadowDxCP" />
        <attr name="layout_shadowDyCP" />
        <attr name="layout_widthCP" />
        <attr name="layout_heightCP" />
        <attr name="layout_marginLeftCP" />
        <attr name="layout_marginRightCP" />
        <attr name="layout_marginTopCP" />
        <attr name="layout_marginBottomCP" />
        <attr name="layout_marginStartCP" />
        <attr name="layout_marginEndCP" />
    </declare-styleable>
    <declare-styleable name="PercentLinearLayout_Layout">
        <attr name="layout_radiusCP" />
        <attr name="layout_shadowColorCP" />
        <attr name="layout_shadowEvaluationCP" />
        <attr name="layout_shadowDxCP" />
        <attr name="layout_shadowDyCP" />
        <attr name="layout_widthCP" />
        <attr name="layout_heightCP" />
        <attr name="layout_marginLeftCP" />
        <attr name="layout_marginRightCP" />
        <attr name="layout_marginTopCP" />
        <attr name="layout_marginBottomCP" />
        <attr name="layout_marginStartCP" />
        <attr name="layout_marginEndCP" />
    </declare-styleable>
    <!--和EasyLayout属性列表一样，但是命名要以XXX_Layout格式，这样开发工具会提示自定义属性-->
    <declare-styleable name="PercentConstraintLayout_Layout">
        <attr name="layout_radiusCP" />
        <attr name="layout_shadowColorCP" />
        <attr name="layout_shadowEvaluationCP" />
        <attr name="layout_shadowDxCP" />
        <attr name="layout_shadowDyCP" />
        <attr name="layout_widthCP" />
        <attr name="layout_heightCP" />
        <attr name="layout_marginLeftCP" />
        <attr name="layout_marginRightCP" />
        <attr name="layout_marginTopCP" />
        <attr name="layout_marginBottomCP" />
        <attr name="layout_marginStartCP" />
        <attr name="layout_marginEndCP" />
    </declare-styleable>
</resources>