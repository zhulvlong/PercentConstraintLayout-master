<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--为了方便扩展其他layout，定义在外层，命名以layout_开头，否则lint会报红警告-->
    <attr name="layout_radius" format="dimension" /><!--圆角大小-->
    <attr name="layout_shadowColor" format="color" /><!--阴影颜色-->
    <attr name="layout_shadowEvaluation" format="dimension" /><!--阴影大小-->
    <attr name="layout_shadowDx" format="dimension" /><!--阴影偏移X-->
    <attr name="layout_shadowDy" format="dimension" /><!--阴影偏移Y-->

    <!--下面的这些百分比属性必须设置左右约束/上下约束才会生效-->
    <attr name="layout_marginLeftPercent" format="float" /><!--控件先对容器(ConstraintLayout)左边距和容器宽度的百分比-->
    <attr name="layout_marginRightPercent" format="float" /><!--控件先对容器(ConstraintLayout)右边距和容器宽度的百分比-->
    <attr name="layout_marginStartPercent" format="float" /><!--控件先对容器(ConstraintLayout)左边距和容器宽度的百分比-->
    <attr name="layout_marginEndPercent" format="float" /><!--控件先对容器(ConstraintLayout)右边距和容器宽度的百分比-->
    <attr name="layout_marginTopPercent" format="float" /><!--控件先对容器(ConstraintLayout)上边距和容器高度的百分比-->
    <attr name="layout_marginBottomPercent" format="float" /><!--控件先对容器(ConstraintLayout)下边距和容器高度的百分比-->


    <!--用统一一个EasyLayout，用于封装读取自定义属性-->
    <declare-styleable name="PercentLayout">
        <attr name="layout_radius" />
        <attr name="layout_shadowColor" />
        <attr name="layout_shadowEvaluation" />
        <attr name="layout_shadowDx" />
        <attr name="layout_shadowDy" />
        <attr name="layout_marginLeftPercent" />
        <attr name="layout_marginRightPercent" />
        <attr name="layout_marginTopPercent" />
        <attr name="layout_marginBottomPercent" />
        <attr name="layout_marginStartPercent" />
        <attr name="layout_marginEndPercent" />
    </declare-styleable>
    <declare-styleable name="PercentLinearLayout_Layout">
        <attr name="layout_radius" />
        <attr name="layout_shadowColor" />
        <attr name="layout_shadowEvaluation" />
        <attr name="layout_shadowDx" />
        <attr name="layout_shadowDy" />
        <attr name="layout_marginLeftPercent" />
        <attr name="layout_marginRightPercent" />
        <attr name="layout_marginTopPercent" />
        <attr name="layout_marginBottomPercent" />
        <attr name="layout_marginStartPercent" />
        <attr name="layout_marginEndPercent" />
    </declare-styleable>
    <!--和EasyLayout属性列表一样，但是命名要以XXX_Layout格式，这样开发工具会提示自定义属性-->
    <declare-styleable name="PercentConstraintLayout_Layout">
        <attr name="layout_radius" />
        <attr name="layout_shadowColor" />
        <attr name="layout_shadowEvaluation" />
        <attr name="layout_shadowDx" />
        <attr name="layout_shadowDy" />
        <attr name="layout_marginLeftPercent" />
        <attr name="layout_marginRightPercent" />
        <attr name="layout_marginTopPercent" />
        <attr name="layout_marginBottomPercent" />
        <attr name="layout_marginStartPercent" />
        <attr name="layout_marginEndPercent" />
    </declare-styleable>
</resources>